{
  "compilerOptions": {
      "target": "es2020",
      "module": "CommonJS",
      "noEmitOnError": true,
      "outDir": "./out",
      "sourceMap": false,
      "declaration": true,
      "removeComments": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "composite": true,
      "typeRoots": [
          "./node_modules/@types/"
      ]
  },
  "include": ["src/**/*.ts"],
  "compileOnSave": true
}
